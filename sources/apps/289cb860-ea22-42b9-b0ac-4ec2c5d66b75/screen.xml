<screen 
	nanoTrigger="true"
	scheduledTrigger="true"
	scheduledDateTrigger="true"
	voiceTrigger="true" >
	<text label="Dire" name="text" default="Salut! Je suis Karotz!" validation="" required="true" errorMessage="Inscrivets une phrase, s.v.p.!" />
	<select label="langue" name="lang" type="one" required="true">
        <option label="français" key="FR" checked="true"/>
		<option label="anglais" key="EN" checked="false"/>
        <option label="allemand" key="DE" checked="false"/>
        <option label="espagnol" key="ES" checked="false"/>
    </select>
	<select label="humeur" name="mood" type="one" required="true">
        <option label="bonne" key="happy" checked="false"/>
        <option label="calme" key="calm" checked="true"/>
		<option label="triste" key="sad" checked="false"/>
		<option label="mauvaise" key="cross" checked="false"/>
    </select>
	<select label="vitesse" name="rate" type="one" required="true">
        <option label="très doucement" key=".3" checked="false"/>
        <option label="doucement" key=".6" checked="false"/>
        <option label="normal" key="0" checked="true"/>
		<option label="vite" key="1.3" checked="false"/>
		<option label="très vite" key="2.0" checked="false"/>
    </select>
	<select label="tonalité" name="pitch" type="one" required="true">
        <option label="Jabba le Hut" key="-60%" checked="false"/>
        <option label="très basse" key="-40%" checked="false"/>
        <option label="basse" key="-20%" checked="false"/>
        <option label="normal" key="0" checked="true"/>
		<option label="élevé" key="110%" checked="false"/>
		<option label="très élevé" key="140%" checked="false"/>
		<option label="Donald Duck" key="200%" checked="false"/>
    </select>
</screen>