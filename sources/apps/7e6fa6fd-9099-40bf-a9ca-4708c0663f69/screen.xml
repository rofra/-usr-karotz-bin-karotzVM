<screen>
	<select label="Vitesse de lecture des titres" name="rate_t" type="one" required="true">
		<option label="- - -" key="x-slow" checked="false"/>
		<option label="- -" key="slow" checked="false"/>
		<option label="-" key="-0.15" checked="false"/>
		<option label="=" key="medium" checked="true"/>
		<option label="+" key="1.15" checked="false"/>
		<option label="+ +" key="fast" checked="false"/>
		<option label="+ + +" key="x-fast" checked="false"/>
	</select>
	<select label="Ton des titres" name="pitch_t" type="one" required="true">
		<option label="-" key="x-low" checked="false"/>
		<option label="=" key="medium" checked="true"/>
		<option label="+" key="x-high" checked="false"/>
	</select>
	<select label="Vitesse de lecture des descriptions" name="rate_d" type="one" required="true">
		<option label="- - -" key="x-slow" checked="false"/>
		<option label="- -" key="slow" checked="false"/>
		<option label="-" key="-0.15" checked="false"/>
		<option label="=" key="medium" checked="true"/>
		<option label="+" key="1.15" checked="false"/>
		<option label="+ +" key="fast" checked="false"/>
		<option label="+ + +" key="x-fast" checked="false"/>
	</select>
	<select label="Ton des descriptions" name="pitch_d" type="one" required="true">
		<option label="-" key="x-low" checked="false"/>
		<option label="=" key="medium" checked="true"/>
		<option label="+" key="x-high" checked="false"/>
	</select>
	<select label="Vous souhaitez lire..." name="je_veux_lire" type="one" required="true">
		<option label="les titres (description par clic)" key="true" checked="true"/>
		<option label="les titres et les descriptions" key="false" checked="false"/>
	</select>
	<select label="Plage de lecture" name="duree_a_lire" type="one" required="true">
		<option label="la derni&#232;re semaine" key="7" checked="true"/>
		<option label="les 2 derni&#232;res semaines" key="14" checked="false"/>
		<option label="le dernier mois" key="30" checked="false"/>
		<option label="les 2 derniers mois" key="60" checked="false"/>
		<option label="les 3 derniers mois" key="90" checked="false"/>
	</select>
	<select label="Dernier(s) titre(s) lu(s) que vous souhaitez relire" name="item_a_lire" type="one" required="true">
		<option label="aucun" key="0" checked="false"/>
		<option label="1" key="1" checked="true"/>
		<option label="2" key="2" checked="false"/>
		<option label="3" key="3" checked="false"/>
		<option label="4" key="4" checked="false"/>
		<option label="5" key="5" checked="false"/>
		<option label="tous" key="9999" checked="false"/>
	</select>
	<select label="Attente entre 2 titres cf mode d'emploi" name="duree_pour_lire" type="one" required="true">
		<option label="1 seconde" key="1000" checked="false"/>
		<option label="2 secondes" key="2000" checked="true"/>
		<option label="3 secondes" key="3000" checked="false"/>
		<option label="4 secondes" key="4000" checked="false"/>
		<option label="5 secondes" key="5000" checked="false"/>
	</select>	
</screen>